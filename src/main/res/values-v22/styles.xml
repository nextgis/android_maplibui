<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g., EditText) -->
        <item name="queryBackground">@android:color/white</item>

        <!-- Text color for the search query -->
        <item name="android:editTextColor">@android:color/black</item>

        <!-- Text color for the hint text shown in the query section of the search view -->
        <item name="android:textColorHint">@android:color/darker_gray</item>

        <!-- Icon for the search query section -->
<!--        <item name="searchIcon">@drawable/baseline_search_24</item>-->

        <!-- Icon for the close action -->
        <item name="closeIcon">@drawable/ic_clear</item>
<!--        <item name="android:searchHintIcon">@drawable/ic_clear</item>-->


        <!-- Icon for the voice action -->
        <!--        <item name="voiceIcon">@drawable/ic_voice</item>-->

        <!-- Customize the SearchView text style -->
        <item name="android:textStyle">bold</item>
    </style>
</resources>